@model SALE_PRODUCT.Models.HomeModel
@{
    ViewBag.Title = "Trang chủ";
}
<div class="top-head">
    <div class="row">
        <div class="col-md-8">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    @for (var item = 0; item < Model.ListBanner.Count(); item++)
                    {
                        if (item == 0)
                        {
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#myCarousel" data-slide-to="@item"></li>
                        }
                    }
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    @for (var item = 0; item < Model.ListBanner.Count(); item++)
                    {
                        if (item == 0)
                        {
                            <div class="item active">
                                <a href="@Model.ListBanner[item].Link" title="@Model.ListBanner[item].Title">
                                    <img src="@Model.ListBanner[item].Image" alt="@Model.ListBanner[item].Alt" width="100%">
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="item">
                                <a href="@Model.ListBanner[item].Link" title="@Model.ListBanner[item].Title">
                                    <img src="@Model.ListBanner[item].Image" alt="@Model.ListBanner[item].Alt" width="100%">
                                </a>
                            </div>
                        }
                    }
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="" style="margin-bottom:10px;">
                <a href="@Model.ListBanner[0].Link" title="@Model.ListBanner[0].Title">
                    <img src="@Model.RightBanner[0].Image" alt="@Model.RightBanner[0].Alt" width="100%" />
                </a>
            </div>
            <div class="">
                <a href="@Model.ListBanner[1].Link" title="@Model.ListBanner[1].Title">
                    <img src="@Model.RightBanner[1].Image" alt="@Model.RightBanner[1].Alt" width="100%" />
                </a>
            </div>
        </div>
    </div>
</div>

<div class="sl-product">
    <div class="owl-carousel owl-theme">
        @foreach (var item in Model.ListProduct)
        {
            <div class="item">
                <a href="/san-pham/@item.Alt" title="@item.Title">
                    <div class="p-item">
                        <img src="@item.Thumnail" alt="@item.Alt" class="img-responsive" />
                        <div class="i-content">
                            <p class="name">@item.Title</p>
                            <p class="price"><span class="gach">@string.Format("{0:#,##0}", item.Price) đ</span> <span class="chot">@string.Format("{0:#,##0}", item.Discount) đ</span></p>
                        </div>
                        @if (item.Sale > 0)
                        {
                            <div class="i-discount">
                                <div class="i-dis-bg text-center">
                                    <span class="percent">@item.Sale%</span><br />
                                    <span class="wl8hrl">GIẢM</span>
                                </div>
                            </div>
                        }

                    </div>
                </a>
            </div>
        }

    </div>
</div>