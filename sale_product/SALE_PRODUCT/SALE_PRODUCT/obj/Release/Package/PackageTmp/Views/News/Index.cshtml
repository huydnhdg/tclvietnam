@model List<SALE_PRODUCT.Models.News>
@{
    ViewBag.Title = "Tin tức";
}

<h2 class="text-center">Tin tức</h2>
<hr />

<div class="art">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 col-lg-3 col-xs-6 col-sm-4">
                <a href="/bai-viet/@item.Alt" title="@item.Title">
                    <div class="a-item">
                        <img src="@item.Thumnail" alt="@item.Alt" class="img-responsive" />
                        <div class="a-content">
                            <h3 class="title">@item.Title</h3>
                            <p class="time">@item.Createdate</p>
                            <p class="des">@item.Description</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

