@model TCLPromotion.Models.Customer
@{
    ViewBag.Title = "Topup";
}

<div class="row">
    <div class="panel panel-default">
        <div class="panel-body">
            <form method="post" action="~/Admin/CustomerHailoc/Topup">
                <input class="form-control hidden" type="text" id="Id" name="Id" value="@Model.ID" />
                <div class="form-group row">
                    <label class="col-md-2">SĐT Nhận thưởng</label>
                    <div class="col-md-2">
                        <input class="form-control" type="text" id="PhoneUse" name="PhoneUse" value="@Model.PhoneUse" />
                    </div>

                </div>
                <div class="form-group row">
                    <label class="col-md-2">Thuê bao</label>
                    <div class="col-md-2">
                        <input class="form-control" type="text" id="Provider" name="Provider" value="@ViewBag.provider" />
                    </div>

                </div>
                <div class="form-group row">
                    <label class="col-md-2">Mệnh giá</label>
                    <div class="col-md-2">
                        <input class="form-control" type="text" id="Amount" name="Amount" value="@Model.PAYMENT" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <p class="text-danger">@ViewBag.msg</p>
                    </div>

                </div>
                <button class="btn btn-primary" type="submit"><i class="fa fa-money"></i> Topup</button>
            </form>
        </div>
    </div>
</div>
